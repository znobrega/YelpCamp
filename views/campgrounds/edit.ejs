<% include ../partials/header.ejs %>

<div class="row">
	<div class="container">
		<h1 class="text-center">Edit Camp <%= campground._id %></h1>
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" step="0.01" name="campground[price]" value="<%= campground.price %>">
				</div>
				<div class="form-group">
					 <button class="btn btn-lg btn-primary btn-block">Edit</button>
				</div>
		</form>
	</div>
</div>

<% include ../partials/footer.ejs %>