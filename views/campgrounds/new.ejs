<% include ../partials/header.ejs %>

<div class="row">
	<div class="container">
		<h1 class="text-center">Add a new camp</h1>
		<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="imageName" placeholder="Image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="imageUrl" placeholder="Image LINK">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="imageDescription" placeholder="Description">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" step="0.01" min="0.01" name="price" placeholder="Price">
				</div>
				<div class="form-group">
					 <button class="btn btn-lg btn-primary btn-block">Create</button>
				</div>
		</form>
	</div>
</div>

